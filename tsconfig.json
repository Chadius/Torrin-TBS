{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "ES5",
        "jsx": "react",
        "lib": ["DOM", "ESNext"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "node_modules/**/*", "dist", "public"]
}
