{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["DOM", "ESNext", "ES2022.String"],
        "skipLibCheck": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "jsx": "react",
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "node_modules/**/*", "dist", "public"]
}
